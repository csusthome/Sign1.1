 	<servlet>
 	    <servlet-name>addNewCourseServlet</servlet-name>
 	    <servlet-class>csust.sign.stuServlet.AddNewCourseServlet</servlet-class>
 	</servlet>
 	<servlet-mapping>
 	    <servlet-name>addNewCourseServlet</servlet-name>
 	    <url-pattern>/addNewCourse</url-pattern>
 	</servlet-mapping>
 	
