        <url-pattern>/getCourseSignInfoCount</url-pattern>
    </servlet-mapping>
    
    <!-- 用于获得某一门课程的所有签到的list -->
    <servlet>
        <servlet-name>getAllSignListOfCourseServlet</servlet-name>
        <servlet-class>csust.sign.teaServlet.GetAllSignListOfCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
