 	<servlet>
 	    <servlet-name>searchForListServlet</servlet-name>
 	    <servlet-class>csust.sign.stuServlet.SearchForListServlet</servlet-class>
 	</servlet>
 	<servlet-mapping>
 	    <servlet-name>searchForListServlet</servlet-name>
 	    <url-pattern>/searchForList</url-pattern>
 	</servlet-mapping>
 	
