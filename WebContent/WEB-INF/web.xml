    <servlet>
        <servlet-name>teaDeleteCourseServlet</servlet-name>
        <servlet-class>csust.sign.teaServlet.TeaDeleteCourse</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>teaDeleteCourseServlet</servlet-name>
        <url-pattern>/teaDeleteCourse</url-pattern>
    </servlet-mapping>
    
    
