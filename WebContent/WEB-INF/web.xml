    <servlet>
        <servlet-name>getStudentListCourseRateServlet</servlet-name>
        <servlet-class>csust.sign.teaServlet.GetStudentListCourseRateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getStudentListCourseRateServlet</servlet-name>
        <url-pattern>/getStudentListCourseRate</url-pattern>
    </servlet-mapping>
    
